<div class="span0 well text-center">
  <% if logged_in? %>
    <%= link_to "#{path}?vote=true", method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
  <% end %>
  <br/>
  <%= obj.total_votes %> votes
  <br/>
  <% if logged_in? %>
    <%= link_to "#{path}?vote=false", method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  <% end %>
</div>